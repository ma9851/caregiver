doctype html
html(lang='en')
    head
        - var title = "Link Patient"
        include ../include/header
    body
        - var navbar = { patients: true }
        include ../include/navbar
        .container
            .page-header
                h1 Caregiver
            .container.text-center
                h2 Choose your Account Type
                br
                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                    a(href='/patient/new')
                        button.btn.btn-primary.btn-lg(type='button') New Patient
                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                    button.btn.btn-default.btn-lg.disabled(type='button') Link Existing Patient
                a(href='/patient/all')
                    .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        button.btn.btn-warning.btn-lg(type='button') Cancel
        include ../include/footer
