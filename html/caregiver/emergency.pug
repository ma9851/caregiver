    body
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    |
                    a.navbar-brand(href='/overview') Caregiver
                .collapse.navbar-collapse.navbar-ex1-collapse
                    ul.nav.navbar-nav
                        li#page-overview
                            a(href='/overview')
                                i.fa.fa-home.fa-lg
                        li#page-profile
                            a(href='/profile') Profile
                        li#page-messages
                            a(href='/messages') Messages
                        li#page-patient-list
                            a(href='/patient/all') Patient List
                        li#page-schedule
                            a(href='/schedule') Schedule
                        li#page-notifications
                            a(href='')
                                i.fa.fa-bell
                        li#page-logout
                            a(href='/') Logout
                    form.navbar-form.navbar-left(role='search')
                        .form-group
                            input.form-control(type='text', placeholder='Search')
                        |
                        button.btn.btn-default(type='submit') Submit
                    ul.nav.navbar-nav.navbar-right
                        li.list-group-item-danger
                            a(href='/emergency') Emergency
        .container
            .row
                .col-xs-12.col-sm-12.col-md-12.col-lg-12
                    form(method='POST', role='form')
                        legend Emergency Alert Entry Screen
                        .row
                            .form-group
                                label.col-sm-2.control-label Name
                                #selectList.col-sm-10
                        .row
                            .form-group
                                label.col-sm-2.control-label(for='reason') Reason
                                .col-sm-10
                                    input#reason.form-control(type='text', name='reason', placeholder='Reason')
                        .row
                            .col-xs-12.col-sm-12.col-md-12.col-lg-12
                                button.btn.btn-primary(type='submit', formaction='/emergencySubmit') Submit
                                |
                                button.btn.btn-default(type='submit', formaction='/emergencyCancel') Cancel
        #includefooter
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
        script(src='//d2c5utp5fpfikz.cloudfront.net/3_1_1/js/bootstrap.min.js')
        script.
            $(function () {
                $("#includefooter").load("/footer.html");
            });
        script.
            var patientList = patientList;
            var myDiv = document.getElementById("selectList");
            var selectList = document.createElement("select");
            selectList.id = "name";
            selectList.name = "name";
            myDiv.appendChild(selectList);
            for (var i = 0; i < patientList.length; i++) {
                var option = document.createElement("option");
                option.value = patientList[i];
                option.text = patientList[i];
                selectList.appendChild(option);
            }
