doctype html
html(lang='en')
    head
        - var title = "Link Patient"
        include ../include/header
        script(src='/testData.js')
        script.
            function addPatientToList() {
                var firstName = document.getElementById('fname').value;
                var lastName = document.getElementById('lname').value;
                var name = firstName + ' ' + lastName;
                addPatient(name);
                alert("Patient:" + name + " has been successfully added to your patient list");
            }
    body
        - var navbar = { patients: true }
        include ../include/navbar
        .container
            form(role='form')
                legend Create a New Patient Account
                .form-group
                    .row
                        label.col-sm-2.control-label(for='fname') First name
                        .col-sm-4
                            input#fname.form-control(type='text', placeholder='First Name', required='')
                        |
                        label.col-sm-2.control-label(for='lname') Last name
                        .col-sm-4
                            input#lname.form-control(type='text', placeholder='Last Name', required='')
                    .row
                        label.col-sm-2.control-label(for='email') Email
                        .col-sm-4
                            input#email.form-control(type='email', placeholder='Email', required='')
                        |
                        label.col-sm-2.control-label(for='dob') Date of Birth
                        .col-sm-4
                            input#dob.form-control(type='date', required='')
                    .row
                        label.col-sm-2.control-label(for='phone') Phone Number
                        .col-sm-4
                            input#phone.form-control(type='tel', placeholder='XXX XXX XXXX', required='')
                .row.text-center
                    button.btn.btn-primary(type='submit', onclick='addPatientToList()') Submit
                    |
                    a(href='/patient/all')
                        button.btn.btn-default(type='button') Cancel
        include ../include/footer
