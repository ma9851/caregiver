doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='Page Description')
        meta(name='author', content='Team Caregiver')
        title Link Patient
        link(href='//d2c5utp5fpfikz.cloudfront.net/3_1_1/css/bootstrap.min.css', rel='stylesheet')
        link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
        link(href='colors.css', rel='stylesheet')
        script(src='//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
        script(src='//oss.maxcdn.com/respond/1.4.2/respond.min.js')
        script(src='/testData.js')
        script.
            function addPatientToList() {
                var firstName = document.getElementById('fname').value;
                var lastName = document.getElementById('lname').value;
                var name = firstName + ' ' + lastName;
                addPatient(name);
                alert("Patient:" + name + " has been successfully added to your patient list");
            }
    body
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    |
                    a.navbar-brand(href='/overview') Caregiver
                .collapse.navbar-collapse.navbar-ex1-collapse
                    ul.nav.navbar-nav
                        li#page-overview
                            a(href='/overview')
                                i.fa.fa-home.fa-lg
                        li#page-profile
                            a(href='/profile') Profile
                        li#page-messages
                            a(href='/messages') Messages
                        li#page-patient-list.active
                            a(href='/patient/all') Patient List
                        li#page-schedule
                            a(href='/schedule') Schedule
                        li#page-notifications
                            a(href='')
                                i.fa.fa-bell
                        li#page-logout
                            a(href='/') Logout
                    form.navbar-form.navbar-left(role='search')
                        .form-group
                            input.form-control(type='text', placeholder='Search')
                        |
                        button.btn.btn-default(type='submit') Submit
                    ul.nav.navbar-nav.navbar-right
                        li.list-group-item-danger
                            a(href='/emergency') Emergency
        .container
            form(role='form')
                legend Create a New Patient Account
                .form-group
                    .row
                        label.col-sm-2.control-label(for='fname') First name
                        .col-sm-4
                            input#fname.form-control(type='text', placeholder='First Name', required='')
                        |
                        label.col-sm-2.control-label(for='lname') Last name
                        .col-sm-4
                            input#lname.form-control(type='text', placeholder='Last Name', required='')
                    .row
                        label.col-sm-2.control-label(for='email') Email
                        .col-sm-4
                            input#email.form-control(type='email', placeholder='Email', required='')
                        |
                        label.col-sm-2.control-label(for='dob') Date of Birth
                        .col-sm-4
                            input#dob.form-control(type='date', required='')
                    .row
                        label.col-sm-2.control-label(for='phone') Phone Number
                        .col-sm-4
                            input#phone.form-control(type='tel', placeholder='XXX XXX XXXX', required='')
                .row.text-center
                    button.btn.btn-primary(type='submit', onclick='addPatientToList()') Submit
                    |
                    a(href='/patient/all')
                        button.btn.btn-default(type='button') Cancel
        #includefooter
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
        script(src='//d2c5utp5fpfikz.cloudfront.net/3_1_1/js/bootstrap.min.js')
        script.
            $(function () {
                $("#includefooter").load("/footer.html");
            });
